      <!-- LongStrings max characters==250. -->
      <bt:LongStrings>
        <bt:String id="Trim.TaskpaneButton.Tooltip" DefaultValue="Click to Show the Content Manager Taskpane" />
		<bt:String id="Trim.OpenButton.Tooltip" DefaultValue="Open a document from CM" />
