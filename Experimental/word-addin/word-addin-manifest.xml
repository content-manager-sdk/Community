		<bt:Image id="Trim.helpicon_16x16" DefaultValue="https://localhost:3000/assets/help16.png" />
		<bt:Image id="Trim.helpicon_32x32" DefaultValue="https://localhost:3000/assets/help32.png" />
		<bt:Image id="Trim.helpicon_80x80" DefaultValue="https://localhost:3000/assets/help80.png" />
		<bt:Image id="Trim.inserttexticon_16x16" DefaultValue="https://localhost:3000/assets/insert-text16.png" />
		<bt:Image id="Trim.inserttexticon_32x32" DefaultValue="https://localhost:3000/assets/insert-text32.png" />
		<bt:Image id="Trim.inserttexticon_80x80" DefaultValue="https://localhost:3000/assets/insert-text80.png" />
		<bt:Image id="Trim.insertobjecticon_16x16" DefaultValue="https://localhost:3000/assets/insert-object16.png" />
		<bt:Image id="Trim.insertobjecticon_32x32" DefaultValue="https://localhost:3000/assets/insert-object32.png" />
		<bt:Image id="Trim.insertobjecticon_80x80" DefaultValue="https://localhost:3000/assets/insert-object80.png" />
		<bt:Image id="Trim.insertpictureicon_16x16" DefaultValue="https://localhost:3000/assets/insert-picture16.png" />
		<bt:Image id="Trim.insertpictureicon_32x32" DefaultValue="https://localhost:3000/assets/insert-picture32.png" />
		<bt:Image id="Trim.insertpictureicon_80x80" DefaultValue="https://localhost:3000/assets/insert-picture80.png" />

		<bt:Image id="Trim.newobjecticon_16x16" DefaultValue="https://localhost:3000/assets/new-object16.png" />
		<bt:Image id="Trim.newobjecticon_32x32" DefaultValue="https://localhost:3000/assets/new-object32.png" />
		<bt:Image id="Trim.newobjecticon_80x80" DefaultValue="https://localhost:3000/assets/new-object80.png" />

      </bt:Images>
      <bt:Urls>
        <bt:Url id="Trim.Taskpane.Url" DefaultValue="https://localhost:3000/index.html" />
        <bt:Url id="Trim.GetStarted.LearnMoreUrl" DefaultValue="https://go.microsoft.com/fwlink/?LinkId=276812" />
        <bt:Url id="Trim.DesktopFunctionFile.Url" DefaultValue="https://localhost:3000/function-file/function-file.html" />
      </bt:Urls>
      <!-- ShortStrings max characters==125. -->
      <bt:ShortStrings>
        <bt:String id="Trim.TaskpaneButton.Label" DefaultValue="Record" />
		<bt:String id="Trim.OpenButton.Label" DefaultValue="Open" />
		<bt:String id="Trim.HelpButton.Label" DefaultValue="Help" />
        <bt:String id="Trim.TabLabel" DefaultValue="Content Manager" />
